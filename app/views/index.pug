include includes/head
body
	
	-var subtitle = 'Home'
	include includes/nav
	.container.is-clearfix
		.grid(data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200, "gutter": 10, "fitWidth": true }')
			each pin in pins
				-var userLink = 'user/' + pin.ownerId
				.grid-item
					.card
						.card-image
							figure.image
								img.img(src=pin.url)
						.card-content
							.media
								.media-content
									p.subtitle= pin.description
							.content.has-text-right
								small= 'by '
									a(href=userLink)= pin.ownerDisplayName

script(src='../js/scripts.js')